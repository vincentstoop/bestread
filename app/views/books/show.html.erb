<article>
  <header>
    <h1><%= @book.title %></h1>
    <h2>by <%= link_to @book.author.full_name, author_path %></h2>
    <p> Year: <%= @book.year %></p>
  </header>
  <section>
    <%= image_tag @book.cover_img%>
    <p> Description: <%= @book.desc %></p>
    <p> Pages: <%= @book.pages %></p>
    <p> ISBN: <%= @book.isbn %></p>
  </section>
  <footer>
    <%= link_to "Edit Book", edit_book_path(@book.id) %>|
    <%= link_to "Delete Book", book_path(@book.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </footer>
</article>
